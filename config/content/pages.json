{
    "default": {
        "link": {
            "type": "text",
            "limit": 10,
            "rules": [ "no-spaces" ]
        },
        "title": {
            "type": "text",
            "limit": 150
        },
        "subtitle": {
            "type": "text"
        },
        "content": {
            "type": "wyswyg"
        }
    },
    "eva": {
        "image": {
            "type": "files",
            "limit": 1,
            "format": [ "png", "jpg", "gif" ],
            "maxSize": 42
        },
        "images": {
            "type": "files",
            "format": [ "png", "jpg", "gif", "mp4" ],
            "maxSize": 1000
        }
    }
}
