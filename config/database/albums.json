{
    "_config": {
        "modular": true
    },
    "_default": {
        "color": {
            "type": "color"
        },
        "pass": {
            "type": "pass"
        },
        "select": {
            "type": "select"
        },
        "link": {
            "type": "text",
            "rules": {
                "required": true,
                "limit": 20,
                "no-spaces": true
            }
        },
        "title": {
            "type": "text",
            "rules": {
                "lang": true,
                "required": true,
                "limit": 150
            }
        },
        "content": {
            "type": "wyswyg",
            "rules": {
                "lang": true
            }
        },
        "credits": {
            "type": "array",
            "children": {
                "job": {
                    "type": "text",
                    "rules": {
                        "limit": 150,
                        "lang": true
                    }
                },
                "name": {
                    "type": "text",
                    "rules": {
                        "limit": 250,
                        "lang": true
                    }
                },
                "link": {
                    "type": "text",
                    "rules": {
                        "limit": 250
                    }
                },
                "pic": {
                    "type": "files",
                    "rules": {
                        "limit": 1,
                        "format": ["gif"],
                        "maxSize": 2000
                    }
                }
            }
        },
        "carousel": {
            "type": "files",
            "rules": {
                "format": ["png", "jpg", "gif"],
                "maxSize": 4000
            }
        },
        "files": {
            "type": "files",
            "rules": {
                "required": true,
                "format": ["png", "jpg", "gif"],
                "maxSize": 4000,
                "backEnabled": true,
                "videoEnabled": true
            }
        },
        "visible": {
            "type": "boolean"
        }
    }
}
