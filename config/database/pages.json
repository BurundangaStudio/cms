{
    "default": {
        "link": {
            "type": "text",
            "rules": {
                "required": true,
                "limit": 10,
                "no-spaces": true
            }
        },
        "title": {
            "type": "text",
            "rules": {
                "limit": 150
            }
        },
        "subtitle": {
            "type": "text"
        },
        "content": {
            "type": "wyswyg"
        }
    },
    "eva": {
        "image": {
            "type": "files",
            "rules": {
                "limit": 1,
                "format": [ "png", "jpg", "gif" ],
                "maxSize": 42
            }
        },
        "images": {
            "type": "files",
            "rules": {
                "required": true,
                "format": [ "png", "jpg", "gif", "mp4" ],
                "maxSize": 3000
            }
        }
    }
}
